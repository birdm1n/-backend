<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="logNm">sellove</Property>
        <Property name="layoutPattern">%d{yyyy/MM/dd HH:mm:ss,SSS} %highlight{[%-5p]}{FATAL=bg_red, ERROR=red,
            INFO=green, DEBUG=blue} ${hostName} %highlight{[%t]} %c{1}(%M:%L) - %m%n
        </Property>
    </Properties>
    <Appenders>
        <Console name="Console_Appender" target="SYSTEM_OUT">
            <PatternLayout pattern="${layoutPattern}"/>
        </Console>
        <RollingFile name="File_Appender" fileName="/var/log/${logNm}/${logNm}.log" filePattern="/var/log/${logNm}/%d{yyyy}/%d{MM}/%d{dd}/%i.log.gz">
            <PatternLayout pattern="${layoutPattern}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20Mb"/>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="500" fileIndex="min"/>
        </RollingFile>
        <RollingFile name="Error_Appender" fileName="/var/log/${logNm}/error_${logNm}.log" filePattern="/var/log/${logNm}/%d{yyyy}/%d{MM}/%d{dd}/error_%i.log.gz">
            <PatternLayout pattern="${layoutPattern}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20Mb"/>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="500" fileIndex="min"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info" additivity="false">
            <AppenderRef ref="File_Appender"/>
        </Root>
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="File_Appender"/>
        </Logger>
        <Logger name="org.springframework" level="error" additivity="false">
            <AppenderRef ref="Error_Appender"/>
        </Logger>
        <Logger name="com.daema" level="info" additivity="false">
            <AppenderRef ref="File_Appender"/>
        </Logger>
        <Logger name="com.daema" level="error" additivity="false">
            <AppenderRef ref="Error_Appender"/>
        </Logger>
    </Loggers>
</Configuration>